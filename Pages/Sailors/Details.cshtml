@page
@model SejlKlubsApp.Pages.Sailors.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<style>
    th{
        background-color: aquamarine;
    }
    label{
        font-weight: bold;
    }
    .table{
        width: 50%;
    }
    .form-group{
        border: groove;
        padding: 10px;
    }
</style>

<table class="table table-bordered">
    <tr>
        <th>
            <label asp-for="Sailor.Name" class="control-label"></label>
        </th>
        <td>
            @Model.Sailor.Name
        </td>
    </tr>
    <tr>
        <th>
            <label asp-for="Sailor.Password" class="control-label"></label>
        </th>
        <td>
            @Model.Sailor.Password
        </td>
    </tr>
    <tr>
        <th>
            <label asp-for="Sailor.Phone" class="control-label"></label>
        </th>
        <td>
            @Model.Sailor.Phone
        </td>
    </tr>
    <tr>
        <th>
            <label asp-for="Sailor.Email" class="control-label"></label>
        </th>
        <td>
            @Model.Sailor.Email
        </td>
    </tr>
</table>
<div class="form-group" style="width: 200px">
    <label asp-for="@Model.Sailor.Admin" class="control-label"></label>
    @if (Model.Sailor.Admin)
    {
        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16">
                <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z" />
                <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
            </svg>
        </div>
    }
    else
    {
        <div style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </div>
    }
</div>
<form method="post" asp-page-handler="UpdateSailor">
    <p>
        <button class="alert-info">Updatere sejler</button>
    </p>
    <input type="hidden" name="id" value="@Model.Sailor.SailorId" />
</form>
<form method="post" asp-page-handler="DeleteSailor">
    <p>
        <button class="alert-info">Slet sejler</button>
    </p>
    <input type="hidden" name="id" value="@Model.Sailor.SailorId" />
</form>