@page
@model SejlKlubsApp.Pages.Sailors.NewSailorModel
@{
    ViewData["Title"] = "NewSailor";
}

<h1>Tilføj en ny Sejler</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.Name" class="control-label"></label>
                <input asp-for="@Model.Sailor.Name" class="form-control" />
                <span asp-validation-for="@Model.Sailor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.LastName" class="control-label"></label>
                <input asp-for="@Model.Sailor.LastName" class="form-control" />
                <span asp-validation-for="@Model.Sailor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.Age" class="control-label"></label>
                <input asp-for="@Model.Sailor.Age" class="form-control" />
                <span asp-validation-for="@Model.Sailor.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.Phone" class="control-label"></label>
                <input asp-for="@Model.Sailor.Phone" class="form-control" />
                <span asp-validation-for="@Model.Sailor.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.Email" class="control-label"></label>
                <input asp-for="@Model.Sailor.Email" class="form-control" />
                <span asp-validation-for="@Model.Sailor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sailor.Password" class="control-label"></label>
                <input asp-for="@Model.Sailor.Password" class="form-control" />
                <span asp-validation-for="@Model.Sailor.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>