@page
@model SejlKlubsApp.Pages.Boats.EditBoatModel
@{
    ViewData["Title"] = "EditBoat";
}

<h1>Ændre Båd status</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Boat.BoatId"/>
            <div class="form-group">
                <label asp-for="@Model.Boat.BoatType" class="contrl-label"></label>
                <input asp-for="@Model.Boat.BoatType" class="form-control" />
                <span asp-validation-for="@Model.Boat.BoatType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Color" class="contrl-label"></label>
                <input asp-for="@Model.Boat.Color" class="form-control" />
                <span asp-validation-for="@Model.Boat.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Condition" class="contrl-label"></label>
                <input asp-for="@Model.Boat.Condition" class="form-control" />
                <span asp-validation-for="@Model.Boat.Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.ImageName" class="contrl-label"></label>
                <input asp-for="@Model.Boat.ImageName" class="form-control" />
                <span asp-validation-for="@Model.Boat.ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>