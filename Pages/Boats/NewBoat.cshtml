@page
@model SejlKlubsApp.Pages.Boats.NewBoatModel
@{
    ViewData["Title"] = "NewBoat";
}

<h1>Tilføj en ny Båd</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Boat.BoatType" class="control-label"></label>
                <input asp-for="@Model.Boat.BoatType" class="form-control" />
                <span asp-validation-for="@Model.Boat.BoatType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Color" class="control-label"></label>
                <input asp-for="@Model.Boat.Color" class="form-control" />
                <span asp-validation-for="@Model.Boat.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.Condition" class="control-label"></label>
                <input asp-for="@Model.Boat.Condition" class="form-control" />
                <span asp-validation-for="@Model.Boat.Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Boat.ImageName" class="control-label"></label>
                <input asp-for="@Model.Boat.ImageName" class="form-control" />
                <span asp-validation-for="@Model.Boat.ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>